<!-- MostReferencedURLs -->

<table>
	<thead>
		<tr>
			<th>#</th>
			<th>URL</th>
			<th>Uses</th>
			<th>Last used by</th>
		</tr>

	</thead>
	<tbody id="<%= widget.getId() %>"></tbody>

</table>

<p>The table lists the most commonly spammed URLs in the channel.</p>

<script type="text/javascript">
// Wait until the document has finished loading
$(document).ready(function() {
	try {

		//$.getJSON("data.json", function(data) { $("head").trigger("nircla", data); });

		$("head").on("nircla", function (_, data) {
			if (typeof data !== "object") return;
			$("tbody#<%= widget.getId() %>").empty();
			$.each(data["MostReferencedURLs"], function(i, item) {
				$tr = $("<tr>").addClass(i%2==0?'odd':'even').append(
					$("<td>").addClass("pos").text(i+1),
					$("<td>").addClass("url").append($("<a>").attr("href", item.url).text(item.url)),
					$("<td>").text(item.uses),
					$("<td>").text(item.by)
				).appendTo("tbody#<%= widget.getId() %>");
			});
		});

	} catch( e ) {}
});

</script>

<!-- /MostReferencedURLs -->
