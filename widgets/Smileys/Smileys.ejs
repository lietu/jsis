<!-- Smileys -->

<table>
	<thead>
		<tr>
			<th>#</th>
			<th>Smiley</th>
			<th>Uses</th>
			<th>Last used by</th>
		</tr>

	</thead>
	<tbody>
		<% for( var i=0, count=widget.lines.length; i < count; ++i ) { %>

			<tr class="<%= i%2===0?'odd':'even' %>">
				<td class="pos">
					<%= i+1 %>
				</td>
				<td>
					<%= widget.lines[i].smiley %>
				</td>
				<td>
					<%= widget.lines[i].uses %>
				</td>
				<td>
					<%= widget.lines[i].by %>
				</td>
			</tr>

		<% } %>

	</tbody>

</table>

<p>The table describes the most commonly used smileys in the channel.</p>

<!-- /Smileys -->
